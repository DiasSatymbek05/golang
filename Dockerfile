# Используем официальный образ Golang
FROM golang:1.20  

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файлы проекта в контейнер
COPY . .

# Загружаем зависимости
RUN go mod tidy

# Собираем приложение
RUN go build -o main .

# Запускаем приложение
CMD ["/app/main"]
